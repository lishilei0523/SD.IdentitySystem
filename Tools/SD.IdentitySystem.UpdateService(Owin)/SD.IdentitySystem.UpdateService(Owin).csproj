    <AssemblyName>SD.IdentitySystem.UpdateService</AssemblyName>
    <RootNamespace>SD.IdentitySystem.UpdateService</RootNamespace>
    <OutputType>Exe</OutputType>
    <ApplicationIcon>favicon.ico</ApplicationIcon>
    <Authors>Lee</Authors>
    <Company>SD</Company>
    <Copyright>Copyright Â© SD 2022</Copyright>
    <Version>1.0.0</Version>

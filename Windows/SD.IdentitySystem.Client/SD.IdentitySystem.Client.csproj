<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>net461;net48;net6.0-windows</TargetFrameworks>
    <OutputType>WinExe</OutputType>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>favicon.ico</ApplicationIcon>
    <Authors>Lee</Authors>
    <Company>SD</Company>
    <Copyright>Copyright © SD 2023</Copyright>
    <Version>4.6.0</Version>
    <AssemblyVersion>4.6.0</AssemblyVersion>
    <FileVersion>4.6.0.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>full</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="favicon.ico" />
    <Resource Include="Content\Images\banner.gif" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <None Include="App.Core.config">
      <DependentUpon>App.config</DependentUpon>
    </None>
    <Reference Include="System.ServiceModel" />
    <PackageReference Include="SD.IOC.Extension.NetFx" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.Equals('net6.0-windows'))">
    <None Remove="App.config" />
    <AppConfigWithTargetPath Include="App.Core.config">
      <TargetPath>$(AssemblyName).dll.config</TargetPath>
    </AppConfigWithTargetPath>
    <PackageReference Include="SD.IOC.Extension.NetCore" Version="1.2.0" />
    <PackageReference Include="SD.IOC.Extension.NetCore.ServiceModel" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="2.4.10" />
    <PackageReference Include="MahApps.Metro.IconPacks.MaterialDesign" Version="4.11.0" />
    <PackageReference Include="FluentWPF" Version="0.10.2" />
    <PackageReference Include="BusyIndicator" Version="1.9.0">
      <ExcludeAssets>contentFiles</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Autoupdater.NET.Official" Version="1.8.4" />
    <PackageReference Include="MrAdvice" Version="2.12.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SD.Common" Version="3.1.6" />
    <PackageReference Include="SD.Toolkits.Recursion" Version="2.1.0" />
    <PackageReference Include="SD.IOC.Core" Version="2.2.2" />
    <PackageReference Include="SD.Infrastructure" Version="3.5.7" />
    <PackageReference Include="SD.Infrastructure.WPF" Version="1.3.0" />
    <PackageReference Include="SD.Infrastructure.WPF.Caliburn" Version="1.2.0" />
    <PackageReference Include="SD.IdentitySystem.IAppService" Version="4.6.0" />
    <PackageReference Include="SD.IdentitySystem.Membership" Version="4.2.1" />
    <PackageReference Include="SD.IdentitySystem.Membership.Common" Version="2.1.1" />
    <PackageReference Include="SD.IdentitySystem.WCF.Authentication.Windows" Version="1.2.1" />
    <PackageReference Include="SD.IdentitySystem.Authorization.WPF" Version="1.1.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SD.IdentitySystem.Presentation\SD.IdentitySystem.Presentation.csproj" />
  </ItemGroup>
</Project>

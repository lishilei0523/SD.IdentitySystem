<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>net461;net48;netcoreapp3.1</TargetFrameworks>
    <OutputType>WinExe</OutputType>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>favicon.ico</ApplicationIcon>
    <Authors>Lee</Authors>
    <Company>SD</Company>
    <Copyright>Copyright © SD 2021</Copyright>
    <Version>4.4.0</Version>
    <AssemblyVersion>4.4.0</AssemblyVersion>
    <FileVersion>4.4.0.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='AnyCPU'">
    <PlatformTarget>AnyCPU</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <Resource Include="favicon.ico" />
    <Resource Include="Content\Images\banner.gif" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <Reference Include="System.ServiceModel" />
    <PackageReference Include="SD.IOC.Extension.NetFx" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)'=='netcoreapp3.1'">
    <None Remove="App.config" />
    <AppConfigWithTargetPath Include="App.core.config">
      <TargetPath>$(AssemblyName).dll.config</TargetPath>
    </AppConfigWithTargetPath>
    <PackageReference Include="SD.IOC.Extension.NetCore" Version="1.0.4" />
    <PackageReference Include="SD.IOC.Extension.NetCore.ServiceModel" Version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="2.4.9" />
    <PackageReference Include="MahApps.Metro.IconPacks.MaterialDesign" Version="4.11.0" />
    <PackageReference Include="FluentWPF" Version="0.10.2" />
    <PackageReference Include="Kino.Toolkit.CoreWpf" Version="1.5.0" />
    <PackageReference Include="BusyIndicator" Version="1.9.0">
      <ExcludeAssets>contentFiles</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Autoupdater.NET.Official" Version="1.7.0" />
    <PackageReference Include="MrAdvice" Version="2.9.5" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="SD.Common" Version="3.1.2" />
    <PackageReference Include="SD.Toolkits.Recursion" Version="2.0.3" />
    <PackageReference Include="SD.IOC.Core" Version="2.1.6" />
    <PackageReference Include="SD.Infrastructure" Version="3.3.6" />
    <PackageReference Include="SD.Infrastructure.WPF" Version="1.0.5" />
    <PackageReference Include="SD.Infrastructure.WPF.Caliburn" Version="1.0.4" />
    <PackageReference Include="SD.IdentitySystem.IAppService" Version="4.4.0" />
    <PackageReference Include="SD.IdentitySystem.Membership" Version="4.0.2" />
    <PackageReference Include="SD.IdentitySystem.Membership.Windows" Version="1.0.3" />
    <PackageReference Include="SD.IdentitySystem.WCF.Authentication.Windows" Version="1.1.1" />
    <PackageReference Include="SD.IdentitySystem.Authorization.WPF" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SD.IdentitySystem.Presentation\SD.IdentitySystem.Presentation.csproj" />
  </ItemGroup>
</Project>
